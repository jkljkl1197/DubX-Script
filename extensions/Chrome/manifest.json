{
"update_url": "https://clients2.google.com/service/update2/crx",

   "manifest_version": 2,
   "name": "DubX",
   "short_name": "DubX",
   "author": "Al3366",
   "description": "DubX - a small collection of enhancements for Dubtrack.fm",
   "homepage_url": "https://dubx.net/",
   "version": "4.0",
   "browser_action": {
          "default_icon": "icons/48.png",
          "default_title": "Dubx",
          "default_popup": "menu/popup.html"
   },

   "content_scripts": [{
      "matches": [
        "http://dubtrack.fm/*",
        "https://dubtrack.fm/*",
        "http://*.dubtrack.fm/*",
        "https://*.dubtrack.fm/*"
      ],
      "js": ["jquery.js","loader.js"],
      "run_at": "document_end"
   }],

    "icons": {
        "16": "icons/16.png",
        "19": "icons/19.png",
        "38": "icons/38.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    
    "permissions": [
      "http://dubtrack.fm/*",
      "https://dubtrack.fm/*",
      "http://*.dubtrack.fm/*",
      "https://*.dubtrack.fm/*"
    ],

    "web_accessible_resources": [
        "dubx.js"
    ]
}
